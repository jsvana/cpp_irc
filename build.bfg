# -*- python -*-

project("irc")

executable(
    "irc",
    files=find_files("src", "*.cpp"),
    compile_options=[
      "-Wall",
      "-Wextra",
      "-pedantic",
      "-Wno-deprecated-declarations",
      "-std=c++14",
    ],
    packages=[
      boost_package("system"),
      system_package("ssl"),
      system_package("crypto"),
      system_package("pthread"),
      system_package("boost_system", kind="static"),
    ],
)
